{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pubDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "category": {
          "type": "string",
          "enum": [
            "PDF Basics",
            "Advanced Features",
            "Security & Privacy",
            "Productivity Tips",
            "Tutorials",
            "Comparisons",
            "Use Cases"
          ]
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "coverImage": {
          "type": "string"
        },
        "coverImageAlt": {
          "type": "string"
        },
        "ogImage": {
          "type": "string"
        },
        "canonicalURL": {
          "type": "string",
          "format": "uri"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tableOfContents": {
          "type": "boolean",
          "default": true
        },
        "difficulty": {
          "type": "string",
          "enum": [
            "beginner",
            "intermediate",
            "advanced"
          ]
        },
        "relatedTools": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "merge-pdf",
              "split-pdf",
              "compress-pdf",
              "protect-pdf",
              "ocr-pdf",
              "add-text-pdf",
              "watermark-pdf",
              "rotate-pdf",
              "delete-pages-pdf",
              "extract-pages-pdf",
              "unlock-pdf",
              "images-to-pdf",
              "pdf-to-images",
              "pdf-to-word",
              "word-to-pdf",
              "sign-pdf",
              "flatten-pdf"
            ]
          }
        },
        "author": {
          "type": "string",
          "default": "LocalPDF Team"
        },
        "authorImage": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "pubDate",
        "tags",
        "category"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}