---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Schema.org BreadcrumbList for SEO
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    ...(item.href && { "item": `https://localpdf.online${item.href}` })
  }))
};
---

<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol>
    {items.map((item, index) => (
      <li>
        {item.href ? (
          <a href={item.href}>{item.label}</a>
        ) : (
          <span aria-current="page">{item.label}</span>
        )}
        {index < items.length - 1 && <span class="separator">â†’</span>}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumbs {
    max-width: 1100px;
    margin: 0 auto;
    padding: 16px 7vw 0;
  }

  .breadcrumbs ol {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.875rem;
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .breadcrumbs a {
    color: #737373;
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumbs a:hover {
    color: #2563EB;
  }

  .breadcrumbs span[aria-current="page"] {
    color: #0A0A0A;
    font-weight: 500;
  }

  .separator {
    color: #E5E5E5;
    user-select: none;
  }

  @media (max-width: 768px) {
    .breadcrumbs {
      padding: 12px 5vw 0;
    }

    .breadcrumbs ol {
      font-size: 0.8125rem;
    }
  }
</style>
