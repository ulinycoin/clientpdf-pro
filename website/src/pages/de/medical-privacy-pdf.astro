<style>
  .medical-hero {
    padding: 120px 7vw 80px;
    position: relative;
    text-align: center;
    background: #000;
    overflow: hidden;
  }

  .medical-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(96, 165, 250, 0.08) 0%, transparent 70%);
    animation: pulse 8s infinite ease-in-out;
    pointer-events: none;
  }

  @keyframes pulse {
    0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
    50% { transform: translate(-50%, -50%) scale(1.2); opacity: 1; }
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .medical-badge {
    display: inline-block;
    padding: 6px 16px;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    color: #ef4444;
    border-radius: 99px;
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 32px;
  }

  h1 {
    font-family: 'Outfit', sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
    color: #fff;
  }

  .accent-text {
    background: linear-gradient(135deg, #fff 30%, #ef4444 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-content p {
    font-size: 1.25rem;
    color: var(--text-muted);
    margin-bottom: 48px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    background: #fff;
    color: #000;
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(255,255,255,0.1);
  }

  .btn-secondary {
    background: rgba(255,255,255,0.05);
    color: #fff;
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid rgba(255,255,255,0.1);
    transition: all 0.2s;
  }

  .btn-secondary:hover { background: rgba(255,255,255,0.1); }

  .section-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 80px 7vw;
  }

  /* Benefits Grid */
  .benefits-section .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 32px;
  }

  .benefit-card {
    padding: 40px;
    background: rgba(255,255,255,0.01);
    border: 1px solid rgba(255,255,255,0.05);
    border-radius: 24px;
    text-align: center;
    transition: all 0.3s;
  }

  .benefit-card:hover { 
    background: rgba(239, 68, 68, 0.03);
    border-color: rgba(239, 68, 68, 0.2);
    transform: translateY(-5px); 
  }

  .card-icon {
    font-size: 2.5rem;
    margin-bottom: 24px;
  }

  .benefit-card h3 {
    font-family: 'Outfit', sans-serif;
    font-size: 1.25rem;
    margin-bottom: 16px;
    color: #fff;
  }

  .benefit-card p {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Compliance Focus */
  .compliance-focus {
    background: #09090b;
  }

  .compliance-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 60px;
    align-items: center;
  }

  .shield-container {
    display: flex;
    justify-content: center;
  }

  .shield-main {
    color: #ef4444;
    width: 200px;
    height: 200px;
    filter: drop-shadow(0 0 30px rgba(239, 68, 68, 0.2));
  }

  .compliance-text h2 {
    font-family: 'Outfit', sans-serif;
    font-size: 2.25rem;
    margin-bottom: 24px;
    color: #fff;
  }

  .compliance-text p {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin-bottom: 32px;
  }

  .compliance-pills {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .pill {
    padding: 8px 16px;
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 99px;
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
  }

  /* FAQ */
  .faq-h2 {
    font-family: 'Outfit', sans-serif;
    font-size: 2rem;
    text-align: center;
    margin-bottom: 48px;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    padding: 32px;
    background: rgba(255,255,255,0.01);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
  }

  .faq-item h3 {
    font-size: 1.1rem;
    margin-bottom: 12px;
    color: #fff;
  }

  .faq-item p {
    color: var(--text-muted);
    font-size: 1rem;
  }

  @media (max-width: 800px) {
    .compliance-grid { grid-template-columns: 1fr; gap: 40px; }
    h1 { font-size: 2.5rem; }
  }
</style>
