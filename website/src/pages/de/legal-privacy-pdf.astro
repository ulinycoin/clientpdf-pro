  }

  .faq-item h3 {
    font-size: 1.1rem;
    margin-bottom: 12px;
    color: #fff;
  }

  .faq-item p {
    color: var(--text-muted);
    font-size: 1rem;
  }

  @media (max-width: 800px) {
    .ps-grid { grid-template-columns: 1fr; }
    h1 { font-size: 2.5rem; }
  }
</style>
