  .section-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 60px 7vw;
  }

  /* Benefits Grid */
  .benefits-section .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 32px;
  }

  .benefit-card {
    padding: 40px;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.05);
    border-radius: 24px;
    text-align: center;
    transition: transform 0.3s;
  }

