    text-align: center;
    margin-bottom: 48px;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    padding: 32px;
    background: rgba(255,255,255,0.02);
    border: 1px solid var(--glass-border);
