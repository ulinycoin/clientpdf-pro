  .card-icon {
    font-size: 2.5rem;
    margin-bottom: 24px;
  }

  .benefit-card h3 {
    font-family: 'Outfit', sans-serif;
    font-size: 1.25rem;
    margin-bottom: 16px;
  }

  .benefit-card p {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Problem/Solution */
