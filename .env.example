# Environment Variables Template
# Скопируйте в .env.local для локальной разработки
# Скопируйте в .env.production для продакшена

# Google Analytics (обязательно для SEO)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Site Configuration
VITE_SITE_URL=https://localpdf.online
VITE_SITE_NAME=LocalPDF
VITE_SITE_DESCRIPTION="Free Privacy-First PDF Tools"

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PRERENDERING=true
VITE_ENABLE_MULTILINGUAL=true

# SEO Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,de,fr,es,ru

# Social Media (опционально)
VITE_TWITTER_HANDLE=@LocalPDF
VITE_FACEBOOK_APP_ID=

# Build Configuration
NODE_ENV=production