{
  "name": "localpdf",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "LocalPDF - Ultra-fast, privacy-first PDF tools that work entirely in your browser",
  "homepage": "https://localpdf.online",
  "repository": {
    "type": "git",
    "url": "https://github.com/ulinycoin/clientpdf-pro.git"
  },
  "keywords": [
    "pdf",
    "privacy",
    "local",
    "browser",
    "merge",
    "split",
    "compress",
    "watermark",
    "text",
    "convert",
    "free",
    "tools",
    "online",
    "secure"
  ],
  "scripts": {
    "dev": "vite",
    "build": "SKIP_TYPE_CHECK=1 vite build",
    "build:full": "SKIP_TYPE_CHECK=1 vite build && npm run prerender-multilingual && npm run generate-multilingual-sitemap && npm run submit-indexnow",
    "preview": "vite preview",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "submit-indexnow": "node scripts/index-now-submit.js",
    "prerender": "node scripts/prerender-working.js",
    "prerender-multilingual": "node scripts/prerender-multilingual.js",
    "prerender-old": "node scripts/prerender.js",
    "generate-multilingual-sitemap": "node scripts/generate-multilingual-sitemap.js",
    "deploy": "node scripts/deploy-production.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "generate:fixtures": "npx tsx e2e/generate-fixtures.ts",
    "test:all": "npm run type-check && npm run test:run && npm run test:e2e"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "@vercel/analytics": "^1.5.0",
    "franc": "^6.2.0",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.263.1",
    "mammoth": "^1.9.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "^6.8.0",
    "tesseract.js": "^5.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.19.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "puppeteer": "^21.0.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.0",
    "vite": "^4.5.0",
    "vitest": "^3.2.4"
  }
}
