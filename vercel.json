{
  "buildCommand": "npm run build:full",
  "outputDirectory": "dist",
  "trailingSlash": false,
  "headers": [
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/.*|.*\\.html|.*\\.txt|.*\\.xml|.*\\.ico|.*\\.png|.*\\.jpg|.*\\.gif|.*\\.svg|.*\\.css|.*\\.js|.*\\.woff|.*\\.woff2|sitemap.*).*)",
      "destination": "/index.html"
    }
  ]
}