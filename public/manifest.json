{
  "name": "LocalPDF - Privacy-First PDF Tools",
  "short_name": "LocalPDF",
  "description": "100% privacy-first PDF processing tools. Merge, split, compress, and edit PDFs directly in your browser without uploads.",
  "theme_color": "#4ECDC4",
  "background_color": "#ffffff",
  "display": "standalone",
  "start_url": "/",
  "scope": "/",
  "orientation": "portrait-primary",
  "lang": "en",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon-512x512.png",
      "sizes": "512x512", 
      "type": "image/png",
      "purpose": "any"
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "LocalPDF desktop view showing PDF tools"
    },
    {
      "src": "/screenshot-mobile.png", 
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "LocalPDF mobile view with glassmorphism design"
    }
  ],
  
  "categories": [
    "productivity", 
    "business", 
    "utilities",
    "office"
  ],
  
  "shortcuts": [
    {
      "name": "Merge PDFs",
      "short_name": "Merge",
      "description": "Combine multiple PDF files into one",
      "url": "/merge-pdf",
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "any"
        }
      ]
    },
    {
      "name": "Split PDF", 
      "short_name": "Split",
      "description": "Extract pages from PDF documents",
      "url": "/split-pdf",
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "any"
        }
      ]
    },
    {
      "name": "Compress PDF",
      "short_name": "Compress", 
      "description": "Reduce PDF file size",
      "url": "/compress-pdf",
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "any"
        }
      ]
    },
    {
      "name": "Add Watermark",
      "short_name": "Watermark",
      "description": "Add watermarks to PDF files", 
      "url": "/watermark-pdf",
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "any"
        }
      ]
    }
  ],
  
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/pdf": [".pdf"]
      },
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  
  "share_target": {
    "action": "/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "pdf_files",
          "accept": ["application/pdf", ".pdf"]
        }
      ]
    }
  },
  
  
  "display_override": ["window-controls-overlay", "standalone"],
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}